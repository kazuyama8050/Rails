<!DOCTYPE html>
<html>
  <head>
    <title><%= page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'js/application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <%= render "shared/header" %>
    </header>
      <div class="container">
        <main>
          <% if flash.notice %>
            <p class="notice"><%= flash.notice %></p>
          <% end %>
          
          <%= yield %>
        </main>

        <aside>
          <%= render "shared/sidebar" %>
        </aside>
      </div>

    <footer>
      <%= render "shared/footer" %>
    </footer>
  </body>
</html>
