<% @page_title="口コミ情報の詳細" %>

<h1><%= @page_title %></h1>
<% if current_user.name==@mouth.mine %>
    <div class="link_right">
        <%= link_to "口コミ情報の編集", [:edit, @mouth] %>
        <%= link_to "削除", @mouth, method: :delete, data: {confirm: "削除してよろしいですか？"} %>
    </div>
<% end %>

<h2>
    <%= @mouth.company %> <%= @mouth.title %>
</h2>
<table>
    <thead>
        <th>投稿者</th>
        <th>カテゴリー</th>
        <th>投稿日</th>
    </thead>
    <tbody>
        <td><%= @mouth.mine %></td>        
        <td><%= @mouth.category %></td>        
        <td><%= @mouth.write_day %></td>     
    </tbody>
    <thead>
        <th>性別</th>
        <th>在籍（当時）</th>
        <th>専攻分野</th>
    </thead>
    <tbody>
        <td><%= @mouth.sex == 0 ? "男" : "女" %></td>
        <td><%= @mouth.yourself %></td>
        <td><%= @mouth.subject %></td>
    </tbody>
</table>
    
<div class="short_form">
        <%= simple_format(@mouth.content) %>
</div>

<div class="link_right">
    <%= link_to "口コミ検索へ戻る", :mouths %>
</div>