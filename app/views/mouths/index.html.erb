<% @page_title="口コミ" %>

<h1><%= @page_title %></h1>

<%= form_tag :search_mouths, method: :get, class: "search" do %>
    <%= text_field_tag "q", params[:q] %>
    <%= submit_tag "検索" %>
<% end %>

<div class="link_right">
    <%= link_to "口コミ追加", :new_mouth %>
</div>

<% if @mouths.present? %>
    <% @mouths.each do |mouth| %>
        <h2>
            <%= link_to mouth.company, mouth, class: "no_link" %>
        </h2>
        <div class="mouth_container">
            <small>業界・業種：<%= mouth.category %></small>&ensp;
            <small>タイトル：<%= mouth.category %></small>&ensp;
            <small>投稿日：<%= mouth.write_day %></small>
        </div>

        <div class="short_form">
            <%= simple_format(truncate(mouth.content, length:40)) %>
        </div>
    <% end %>
    <%= paginate @mouths %>
<% else %>
    <p>口コミ記事はありません。</p>
<% end %>