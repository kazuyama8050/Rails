<% @page_title="企業の詳細" %>

<h1><%= @page_title %></h1>

<div class="link_right">
    <%= link_to "企業情報の編集", [:edit, @company] %>
</div>
<table>
    <tr>
        <th>企業名</th>
        <td><%= @company.name %></td>
    </tr>
    <tr>
        <th>ID</th>
        <td><%= @company.ids %></td>
    </tr>
    <tr>
        <th>パスワード</th>
        <td><%= @company.password %></td>
    </tr>
    <tr>
        <th>採用サイト</th>
        <td><a href=<%= @company.link %> target=”_blank”><%= @company.link %></a></td>
    </tr>
    <tr>
        <th>企業サイト</th>
        <td><a href=<%= @company.homepage %> target=”_blank”><%= @company.homepage %></a></td>
    </tr>
    <tr>
        <th>メモ</th>
        <div class="long_form">
            <td><%= simple_format(@company.memo) %></td>
        </div>
    </tr>
</table>

<div class="link_right">
    <%= link_to "企業検索へ戻る", :companies %>
</div>